<Window x:Class="HIITT.Paginas.ErrorPag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HIITT.Paginas"
        mc:Ignorable="d"
        Title="Error" Height="300" Width="200" ResizeMode="NoResize" WindowStyle="None">
    <Grid x:Name="grdError">
        <TextBlock Text="Error" HorizontalAlignment="Center" FontSize="20" FontWeight="Black" FontFamily="Yu Gothic UI"/>
        <TextBlock x:Name="ErrorPagText" Margin="20,20,20,0" Height="100" VerticalAlignment="Top" TextAlignment="Center"/>
        <Button x:Name="ErrorPagAceptar" Content="Aceptar" Width="100" Height="30"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
